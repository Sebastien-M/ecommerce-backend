{% extends 'base.html.twig' %}

{% block body %}
    <h1>Panier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>Articles</th>
                <td>{% if panier.articles %}{{ panier.articles|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('panier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('panier_edit', { 'id': panier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
